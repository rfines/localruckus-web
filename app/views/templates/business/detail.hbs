<div class="row">
  <div class="col-md-3 col-md-offset-1 leftCol">
    <div class="row detailImage">
      <img src="{{i}}" />
    </div>
    <div class="row shareIcons">
    </div>
    <div class="row">
      <div class="col-md-9 businessInfo detailSidebar">
        <p class="businessName">{{name}}</p>
        <hr />
          <dl>
            {{#if contactName}}
              <dt>Contact Name</dt>
              <dd>{{contactName}}</dd>
            {{/if}}
            {{#if contactEmail}}
              <dt>Contact Email</dt>
              <dd>{{contactEmail}}</dd>            
            {{/if}}
            {{#if contactPhone}}
              <dt>Phone</dt>
              <dd>{{contactPhone}}</dd>
            {{/if}}
            {{#if website}}
              <dd><a href="{{website}}" target="_blank">Visit Website</a></dd>
            {{/if}}
          </dl>        
      </div>
    </div>     
  </div>
  <div class="col-md-8 rightCol">
    <div class="row">
      <h2>{{name}}</h2>
    </div>
    <div class="details">
      <ul id="businessTab" class="nav nav-tabs">
        <li class="active"><a href="#info" data-toggle="tab">Info</a></li>
        <li class=""><a href="#events" data-toggle="tab">Events</a></li>
      </ul>
      <div id="businessTabContent" class="tab-content">
        <div class="tab-pane fade active in" id="info">
          <div class="row details">
            <div class="col-md-5">
              <dl>
                <dt>Categories:</dt>
                <dd>{{tags}}</dd>
                <dt>Phone:</dt>
                <dd>{{contactPhone}}</dd>
                <dt>Address:</dt>
                <dd>{{location.address}}</dd>
              </dl>              
              <h3>Map & Directions</h3>
              <div class="map" id="map_{{_id}}" style="height:149px;width:265px"></div>
            </div>
            <div class="col-md-7">
              <dl>
                <dd>{{description}}</dd>
                <dt>More Info</dt>
                <dd>
                  <p>{{website}}</p>
                  <p>{{contactName}}</p>
                  <p>{{contactPhone}}</p>
                </dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="events">
          <div class="row eventGallery">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>