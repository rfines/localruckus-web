<div class="row">
  <div class="col-md-3 col-md-offset-1 leftCol">
    {{#if i}}
    <div class="row detailImage">
      <img src="{{i}}" />
    </div>
    {{/if}}
    <div class="row shareIcons">
    </div>
    <div class="row">
      <div class="col-md-9 businessInfo detailSidebar">
        <h5 class="businessName" style="color:#fff;">{{name}}</h5>
	
        <hr />
          <p><dl>
            {{#if contactName}}
              <dt>Contact Name</dt>
              <dd>{{contactName}}</dd>
            {{/if}}
            {{#if contactEmail}}
              <dt>Contact Email</dt>
              <dd>{{contactEmail}}</dd>            
            {{/if}}
            {{#if contactPhone}}
              <dt>Phone</dt>
              <dd>{{contactPhone}}</dd>
            {{/if}}
            {{#if website}}
              <dt>Website</dt>
              <dd><a href="{{website}}" target="_blank">{{website}}</a></dd>
            {{/if}}      
				    
            {{#if hasSocialMediaLinks}}
              <dt>Social Media</dt>
              <dd class="hasSocialMediaLinks">
              {{#if facebook}}
                <dd><a href="{{facebook}}" target="_blank"><img src="/client/images/facebook_16.png" /></a>
              {{/if}}
              {{#if twitter}}
                <a href="{{twitter}}" target="_blank"><img src="/client/images/twitter_16.png" /></a>
              {{/if}}
              {{#if foursquare}}
              
               <a href="{{foursquare}}" target="_blank"><img src="/client/images/foursquare_16.png" /></a>
              {{/if}}                        
              </dd>
            {{/if}}
          </dl> 	<div class="claim-business">
	          <button type="button" class="btn btn-default btn-block claimBusiness" data-toggle="modal" data-target="#claim-modal"><i class="glyphicon glyphicon-star-empty
				"></i>&nbsp;Claim This Business Profile</button>
	        </div>   </p>    
      </div>
    </div>     
  </div>
  <div class="col-md-7 rightCol">
    <div class="row">
      <h2>{{name}}</h2>
		
    </div>
    <div class="details">
      <ul id="businessTab" class="nav nav-tabs">
        <li class="active"><a href="#info" data-toggle="tab">Info</a></li>
        <li class=""><a href="#events" data-toggle="tab">Events</a></li>
      </ul>
      <div id="businessTabContent" class="tab-content">
        <div class="tab-pane fade active in" id="info">
          <div class="row details">
            <div class="col-md-5">
              <dl>
                <dt>Categories</dt>
                <dd>{{tags}}</dd>
                {{#if contactPhone}}
                <dt>Phone</dt>
                <dd>{{contactPhone}}</dd>
                {{/if}}
                <dt>Address</dt>
                <dd>{{location.address}}</dd>
              </dl>              
              <h3>Map & Directions</h3>
              <div class="map" id="map_{{_id}}" style="height:149px;width:265px"></div>
            </div>
            <div class="col-md-7">

              <dl>
                <dd>{{{description}}}</dd>
                <dt>More Info</dt>
                <dd>
                  <p><a href="{{website}}" target="_blank">{{website}}</a></p>
                  <p>{{contactName}}</p>
                  {{#if contactPhone}}
                  <p>{{contactPhone}}</p>
                  {{/if}}
                </dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="events">
          <div class="row">
           
              <div class="row eventGallery"></div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="claim-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Claim this Business</h4>
      </div>
      <div class="modal-body">
        To claim this business and manage your own events please email <a target="_blank" href="mailto:info@localruckus.com">info@localruckus.com</a>.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Ok</button>
      </div>
    </div>
  </div>
</div>