<div class="row">
  <div class="col-md-3 col-md-offset-1 leftCol">
    {{#if i}}
    <div class="row detailImage">
      <img class="img-responsive hidden-xs" src="{{i}}" />
    </div>
    {{/if}}
    <div class="row shareIcons hidden-xs">
    </div>
    <div class="row">
      <div class="col-md-9 businessInfo detailSidebar">
        <h5 class="businessName" style="color:#fff;">{{name}}</h5>
	
        <hr />
          <p><dl>
            {{#if contactName}}
              <dt>Contact Name</dt>
              <dd>{{contactName}}</dd>
            {{/if}}
            {{#if contactEmail}}
              <dt>Contact Email</dt>
              <dd>{{contactEmail}}</dd>            
            {{/if}}
            {{#if contactPhone}}
              <dt>Phone</dt>
              <dd>{{contactPhone}}</dd>
            {{/if}}
            {{#if website}}
              <dt>Website</dt>
              <dd><a href="{{website}}" target="_blank">{{website}}</a></dd>
            {{/if}}      
				    
            {{#if hasSocialMediaLinks}}
              <dt>Social Media</dt>
              <dd class="hasSocialMediaLinks">
              {{#if facebook}}
                <dd><a href="{{facebook}}" target="_blank"><img src="/client/images/facebook_16.png" /></a>
              {{/if}}
              {{#if twitter}}
                <a href="{{twitter}}" target="_blank"><img src="/client/images/twitter_16.png" /></a>
              {{/if}}
              {{#if foursquare}}
              
               <a href="{{foursquare}}" target="_blank"><img src="/client/images/foursquare_16.png" /></a>
              {{/if}}                        
              </dd>
            {{/if}}
          </dl> 	<div class="claim-business">
	          <button type="button" class="btn btn-default btn-block claimBusiness" data-toggle="modal" data-target="#claim-modal"><i class="glyphicon glyphicon-star-empty
				"></i>&nbsp;Claim This Business Profile</button>
	        </div>   </p>    
      </div>
    </div>     
  </div>
  <div class="col-md-7 rightCol">
    <div class="row">
      <h2>{{name}}</h2>
		
    </div>
    <div class="details">
      <ul id="businessTab" class="nav nav-tabs">
        <li class="active"><a href="#info" data-toggle="tab">Info</a></li>
        <li class=""><a href="#events" data-toggle="tab">Events</a></li>
      </ul>
      <div id="businessTabContent" class="tab-content">
        <div class="tab-pane fade active in" id="info">
          <div class="row details">
            <div class="col-md-5">
              <dl>
                <dt>Categories</dt>
                <dd>{{tags}}</dd>
                {{#if contactPhone}}
                <dt>Phone</dt>
                <dd>{{contactPhone}}</dd>
                {{/if}}
                <dt>Address</dt>
                <dd>{{location.address}}</dd>
              </dl>              
              <h3>Map & Directions</h3>
              <div class="map" id="map_{{_id}}" style="height:149px;width:265px"></div>
            </div>
            <div class="col-md-7">

              <dl>
                <dd>{{{description}}}</dd>
                <dt>More Info</dt>
                <dd>
                  <p><a href="{{website}}" target="_blank">{{website}}</a></p>
                  <p>{{contactName}}</p>
                  {{#if contactPhone}}
                  <p>{{contactPhone}}</p>
                  {{/if}}
                </dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="tab-pane fade" id="events">
          <div class="row">
           
              <div class="row eventGallery"></div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="claim-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Claim the {{name}} Business Profile</h4>
      </div>
      <div class="modal-body row">
	<div class="col-md-12">
	<ul>
	<li><i class="glyphicon glyphicon-check"></i>&nbsp;Local Ruckus is powered by <a href="http://www.hoopla.io/" target="blank">Hoopla.io</a></li>
	<li><i class="glyphicon glyphicon-check"></i>&nbsp;Create an account for FREE until Q2 2014!...Here's our <a href="http://www.hoopla.io/#Pricing" target="blank">anticipated pricing</a></li>
	<li><i class="glyphicon glyphicon-check"></i>&nbsp;Manage social media promotions for your events from one place </li>
	<li><i class="glyphicon glyphicon-check"></i>&nbsp;Update your website automagically with our website calendar widgets</li>
	<li><i class="glyphicon glyphicon-check"></i>&nbsp;Automatically syndicate your events to publishers in the Hoopla.io Network, including Local Ruckus </li>
	</ul>
	<form role=" class="form-inline" class="contactForm" method="POST">
      <input type="text" name="subject" class="hide" value="Suggest Business or Event Submission from LocalRuckus.com" />
      <div class="control-group">
        <label for="name">Your Name <span class="required">*</span></label>
        <input type="text" name="name" class="form-control" />
      </div>
	<div class="control-group">
        <label for="name">Your Business</label>
        <input type="text" name="name" class="form-control" value="{{name}}"  disabled/>
      </div>
      <div class="control-group">
        <label for="email">Your Email Address <span class="required">*</span></label>
        <input type="email" name="email" class="form-control" />
      </div>             
      <div class="control-group">
        <label for="name">Additional info <span class="required">*</span></label>
        <textarea name="text" class="form-control" />
      </div><div class="row"><p>&nbsp;	</p>
		              </div>
      <div class="pull-right"><p>&nbsp;<button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">no thank you</button>&nbsp;<button type="submit" class="btn btn-info">Claim Business</button>
</p>
      </div>
    </form>
	</div>
       
      </div>
      <div class="modal-footer">
       
      </div>
    </div>
  </div>
</div>