<!-- Modal For Contact Us -->
<div class="modal fade" id="contactUs" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <div>
            <p class="line1">Suggest a Business or Event for LocalRuckus</p>
            <form role="form" class="contactForm" method="POST">
              <input type="text" name="subject" class="hide" value="Suggest Business or Event Submission from LocalRuckus.com" />
              <div class="control-group">
                <label for="name">Your Name <span class="required">*</span></label>
                <input type="text" name="name" class="form-control" />
              </div>
              <div class="control-group">
                <label for="email">Your Email Address <span class="required">*</span></label>
                <input type="email" name="email" class="form-control" />
              </div>             
              <div class="control-group">
                <label for="name">Alright, what's on your mind? <span class="required">*</span></label>
                <textarea name="text" class="form-control" />
              </div>
              <div class="control-group">
                <button type="submit" class="btn btn-default">Send</button>
              </div>
            </form>
        </div>
      </div>
    </div>
  </div>
</div>