<div class="row">
  <div class="col-md-3 col-md-offset-1">
    <div class="row">
      <img src="{{i}}" />
    </div>
    <div class="row shareIcons">
    </div>
    <div class="row businessInfo">
      Business INfo Goes Here
    </div>        
  </div>
  <div class="col-md-8">
    <div class="row">
      <h2>{{name}}</h2>
    </div>
    <div class="row details">
      <div class="col-md-5">
        <h3>Date & Time</h3>
        <h3>Cost / Tickets</h3>
        {{cost}} {{#if ticketUrl}}- <a href="{{ticketUrl}}">Tickets</a>{{/if}}
        <h3>Map & Directions</h3>
      </div>
      <div class="col-md-7">
        <h3>Categories</h3>
        <div>{{eventTags}}</div>
        <h3>Description</h3>
        <div>{{description}}</div>
        <h3>More Info</h3>
        <div>{{website}}</div>
        <div>{{contactName}}</div>
        <div>{{contactPhone}}</div>
      </div>
    </div>
  </div>
</div>