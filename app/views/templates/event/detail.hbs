<div class="row">
  <div class="col-md-4">
    <div class="row">
      <img src="http://placehold.it/350x150" />
    </div>
    <div class="row shareIcons">
      Share Icons go here
    </div>
    <div class="row businessInfo">
      Business INfo Goes Here
    </div>        
  </div>
  <div class="col-md-8">
    <div class="row">
      <h2>{{name}}</h2>
    </div>
    <div class="row details">
      <div class="col-md-5">
        <h3>Date & Time</h3>
        <h3>Cost / Tickets</h3>
        {{cost}} {{#if ticketUrl}}- <a href="{{ticketUrl}}">Tickets</a>{{/if}}
        <h3>Map & Directions</h3>
      </div>
      <div class="col-md-7">
        <h3>Categories</h3>
        <div>{{eventTags}}</div>
        <h3>Description</h3>
        <div>{{description}}</div>
        <h3>More Info</h3>
        <div>{{website}}</div>
        <div>{{contactName}}</div>
        <div>{{contactPhone}}</div>
      </div>
    </div>
  </div>
</div>